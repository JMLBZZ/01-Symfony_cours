{% extends 'base-backend.html.twig' %}

{% block title %}Livres{% endblock %}

{% block body %}
    <a href="{{ path('app_admin_book_index') }}" class="btn btn-dark btn-sm">Retour à la liste</a>
    <h1 class="mt-3">Livres</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ book.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ book.title }}</td>
            </tr>
            <tr>
                <th>Couverture</th>
                <td>
                    <a href="{{ asset('images/book/' ~ book.imageName) }}" data-lightbox="{{ book.imageName }}">
                        <img src="{{asset('images/book/' ~ book.imageName)}}" class="img-list" alt="{{ book.imageName }}">
                    </a>
                </td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ book.description }}</td>
            </tr>
            {# <tr>
                <th>Modifié le</th>
                <td>{{ book.updatedAt ? book.updatedAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ book.slug }}</td>
            </tr> #}
            <tr>
                <th>Activer ?</th>
                <td>{{ book.isActive ? 'Oui' : 'Non' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-between align-items-center">
        <a href="{{ path('app_admin_book_edit', {'id': book.id}) }}" class="btn btn-success">
            <i class="align-middle" data-feather="edit-3"></i>
        </a>
        {{ include('admin_book/_delete_form.html.twig') }}
    </div>
{% endblock %}
