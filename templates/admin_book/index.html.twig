{% extends 'base-backend.html.twig' %}

{% block title %}Livres{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Livres</h1>
        <a href="{{ path('app_admin_book_new') }}" class="btn btn-dark">Ajouter un livre</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                {# <th>Description</th> #}
                <th>Couverture</th>
                {# <th>Modifié le</th> #}
                {# <th>Slug</th> #}
                <th>Activer ?</th>
                <th class="text-end">Voir/Éditer</th>
            </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td>{{ book.id }}</td>
                <td>{{ book.title }}</td>
                {# <td>{{ book.description }}</td> #}
                <td>
                    <a href="{{ asset('images/book/' ~ book.imageName) }}" data-lightbox="{{ book.imageName }}">
                        <img src="{{asset('images/book/' ~ book.imageName)}}" class="img-list" alt="{{ book.imageName }}">
                    </a>
                </td>
                {# <td>{{ book.updatedAt ? book.updatedAt|date('d/m/Y H:i:s') : '' }}</td> #}
                {# <td>{{ book.slug }}</td> #}
                <td>{{ book.isActive ? 'Oui' : 'Non' }}</td>

                <td class="text-end">
                    <a href="{{ path('app_admin_book_show', {'id': book.id}) }}" class="btn btn-dark">
                        <i class="align-middle" data-feather="eye"></i>
                    </a>
                    <a href="{{ path('app_admin_book_edit', {'id': book.id}) }}" class="btn btn-success">
                        <i class="align-middle" data-feather="edit-3"></i>
                    </a>
                </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucune donnée trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
