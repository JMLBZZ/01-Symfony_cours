{% extends 'base-backend.html.twig' %}

{% block title %}Auteur(e){% endblock %}

{% block body %}
    <a href="{{ path('app_admin_author_index') }}" class="btn btn-dark btn-sm">Retour à la liste</a>
    <h1 class="mt-3">Auteur(e)</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ author.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ author.name }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ author.firstName }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ author.pseudo }}</td>
            </tr>
            <tr>
                <th>Né(e) le</th>
                <td>{{ author.birthdate ? author.birthdate|date('d/m/Y') : '' }}</td>
            </tr>
            <tr>
                <th>Décédé(e) le</th>
                <td>{{ author.dateOfDeath ? author.dateOfDeath|date('d/m/Y') : '' }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>
                    <a href="{{ asset('images/author/' ~ author.imageName) }}" data-lightbox="{{ author.imageName }}">
                        <img src="{{asset('images/author/' ~ author.imageName)}}" class="img-list" alt="{{ author.imageName }}">
                    </a>
                </td>   
            </tr>
            <tr>
                <th>Biographie</th>
                <td>{{ author.biography }}</td>
            </tr>
            {# <tr>
                <th>Modifié le</th>
                <td>{{ author.updatedAt ? author.updatedAt|date('d/m/Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ author.slug }}</td>
            </tr> #}
        </tbody>
    </table>

    <div class="d-flex justify-content-between align-items-center">
        <a href="{{ path('app_admin_author_edit', {'id': author.id}) }}" class="btn btn-success">
            <i class="align-middle" data-feather="edit-3"></i>
        </a>
        {{ include('admin_author/_delete_form.html.twig') }}
    </div>
{% endblock %}
