{% extends 'base-backend.html.twig' %}

{% block title %}Auteurs/Autrices{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Auteurs/Autrices</h1>
        <a href="{{ path('app_admin_author_new') }}" class="btn btn-dark">Nouvel auteur</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Pseudo</th>
                <th>Biographie</th>
                <th>Né(e) le</th>
                <th>Décédé(e) le</th>
                <th>Photo</th>
                <th>Modifié le</th>
                <th>Slug</th>
                <th class="text-end">Voir/Éditer</th>
            </tr>
        </thead>
        <tbody>
        {% for author in authors %}
            <tr>
                <td>{{ author.id }}</td>
                <td>{{ author.name }}</td>
                <td>{{ author.firstName }}</td>
                <td>{{ author.pseudo }}</td>
                <td>{{ author.biography }}</td>
                <td>{{ author.birthdate ? author.birthdate|date('d-m-Y H:i:s') : '' }}</td>
                <td>{{ author.dateOfDeath ? author.dateOfDeath|date('d-m-Y H:i:s') : '' }}</td>
                <td>
                    <a href="{{ asset('images/author/' ~ author.imageName) }}" data-lightbox="{{ author.imageName }}">
                        <img src="{{asset('images/author/' ~ author.imageName)}}" class="img-list" alt="{{ author.imageName }}">
                    </a>
                </td>                
                <td>{{ author.updatedAt ? author.updatedAt|date('d-m-Y H:i:s') : '' }}</td>
                <td>{{ author.slug }}</td>
                <td class="text-end">
                    <a href="{{ path('app_admin_author_show', {'id': author.id}) }}" class="btn btn-dark">
                        <i class="align-middle" data-feather="eye">
                    </i>
                    </a>
                    <a href="{{ path('app_admin_author_edit', {'id': author.id}) }}" class="btn btn-success">
                        <i class="align-middle" data-feather="edit-3"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">Aucune donnée trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
