{% extends 'base-backend.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Tableau de bord</h1>
        <a href="{{ path('app_admin_home_new') }}" class="btn btn-dark">Ajouter un post</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                {# <th>Texte</th> #}
                <th>Signature</th>
                <th>Activé ?</th>
                <th class="text-end">Voir/Éditer</th>
            </tr>
        </thead>
        <tbody>
        {% for home in homes %}
            <tr>
                {# le nombre de td doit correpondre au même nombre de th #}
                <td>{{ home.id }}</td>
                <td>{{ home.titre }}</td>
                {# <td>{{ home.texte }}</td> #}
                <td>{{ home.signature }}</td>
                <td>{{ home.isActive ? 'Oui' : 'Non' }}</td>
                <td class="text-end">
                    <a href="{{ path('app_admin_home_show', {'id': home.id}) }}" class="btn btn-dark">
                        <i class="align-middle" data-feather="eye">
                        </i>
                    </a>
                    <a href="{{ path('app_admin_home_edit', {'id': home.id}) }}" class="btn btn-success">
                        <i class="align-middle" data-feather="edit-3">
                        </i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                {# fusion des colonnes du tableau : ici 5 car on a enlevé la colonne texte pour la visualisation#}
                <td colspan="5">Aucune donnée trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
