{% extends 'base-backend.html.twig' %}

{% block title %}Information de la catégorie{% endblock %}

{% block body %}
    <a href="{{ path('app_admin_book_category_index') }}" class="btn btn-dark btn-sm">Retour à la liste</a>
    <h1 class="mt-3">Informations de la catégorie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ book_category.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ book_category.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ book_category.description }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-between align-items-center">
        <a href="{{ path('app_admin_book_category_edit', {'id': book_category.id}) }}" class="btn btn-success">
            <i class="align-middle" data-feather="edit-3"></i>
        </a>
        {{ include('admin_book_category/_delete_form.html.twig') }}
    </div>
{% endblock %}
