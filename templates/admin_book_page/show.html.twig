{% extends 'base-backend.html.twig' %}

{% block title %}Pages{% endblock %}

{% block body %}
    <a href="{{ path('app_admin_book_page_index') }}" class="btn btn-dark btn-sm">Retour à la liste</a>
    <h1 class="mt-3">Pages</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ book_page.id }}</td>
            </tr>
            <tr>
                <th>Page</th>
                <td>
                    <a href="{{ asset('images/book_page/' ~ book_page.imageName) }}" data-lightbox="{{ book_page.imageName }}">
                        <img src="{{asset('images/book_page/' ~ book_page.imageName)}}" class="img-list" alt="{{ book_page.imageName }}">
                    </a>
                </td>
            </tr>
            <tr>
                <th>Modifié le</th>
                <td>{{ book_page.updatedAt ? book_page.updatedAt|date('d/m/Y H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-between align-items-center">
        <a href="{{ path('app_admin_book_page_edit', {'id': book_page.id}) }}" class="btn btn-success">
            <i class="align-middle" data-feather="edit-3"></i>
        </a>
        {{ include('admin_book_page/_delete_form.html.twig') }}
    </div>
{% endblock %}
